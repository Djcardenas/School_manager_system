<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>School  Software Manager</title>
  </head>
  <body>
  <header> <h1>Staff School</h1></header>
  <section>
    <h2>Teachers</h2>
    <table>
      <tr> <th>Id</th><th>Identification</th><th>name</th><th>lastname</th><th>gender</th></tr>

      <% @teachers.each do |teacher| %>
      <tr> <td><%=teacher.id%></td>
           <td><%=teacher.teacher_id%></td>
           <td><%=teacher.name%></td>
           <td><%=teacher.lastname%></td>
           <td><%=teacher.gender%> </td>
      </tr>
      <% end %>
    </table>
    <%= link_to 'Teachers section', teachers_path %>


    <h2>Students</h2>
    <table>
      <tr> <th>Id</th><th>Identification</th><th>name</th><th>lastname</th><th>gender</th></tr>

      <% @students.each do |student| %>
      <tr> <td><%=student.id%></td>
           <td><%=student.student_id%></td>
           <td><%=student.name%></td>
           <td><%=student.lastname%></td>
           <td><%=student.gender%> </td>
      </tr>
      <% end %>
    </table>
    <%= link_to 'Students section', students_path %>


    <h2>Courses</h2>
    <table>
      <tr> <th>Id</th><th>Code</th><th>name</th><th>Comments</th>></tr>

      <% @courses.each do |course| %>
      <tr>
           <td><%=course.id%></td>
           <td><%=course.code%></td>
           <td><%=course.name%></td>
           <td><%=course.comments%></td>

      </tr>
      <% end %>
    </table>
    <%= link_to 'Courses section', courses_path %>

  </section>
  </body>
</html>
